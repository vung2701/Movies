<div class="mt-4">
    <div class="container">
        <h3>Upload Profile</h3>
        {{#with (object account)}}
            <form method="POST" action="/profile/save?method=PUT">
                <div class="form-group">
                    <label for="fullname">Fullname:</label>
                    <input
                        type="text"
                        class="form-control"
                        id="fullname"
                        name="fullname"
                        value="{{fullname}}"
                    />
                </div>
                <div class="form-group">
                    <label for="age">Age:</label>
                    <input
                        type="text"
                        class="form-control"
                        id="age"
                        name="age"
                        value="{{age}}"
                    />
                </div>

                <div class="form-group">
                    <label for="address">Address:</label>
                    <input
                        type="text"
                        class="form-control"
                        id="address"
                        name="address"
                        value="{{address}}"
                    />
                </div>
                <div class="form-group">
                    <label for="contact">Contact:</label>
                    <input
                        type="text"
                        class="form-control"
                        id="contact"
                        name="contact"
                        value="{{contact}}"
                    />
                </div>
                <div class="form-group">
                    <label for="avatar">Avatar:</label>
                    <input
                        class="form-control"
                        id="avatar"
                        name="avatar"
                        value="{{avatar}}"
                    ></input>
                </div>
                <button type="submit" class="btn btn-primary">Upload</button>
            </form>
        {{/with}}
    </div>
</div>